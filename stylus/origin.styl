makeTransition(transition)
  -webkit-transition transition
  -moz-transition transition
  -o-transition transition
  transition transition
makeShadow(shadow)
  -moz-box-shadow shadow
  -webkit-box-shadow shadow
  box-shadow shadow
shadow()
  makeShadow(0 0 14px rgba(0, 250, 0, 1))

shadowText()
  text-shadow 0px 0px 8px rgba(255,255,255,1)


body
  margin 0
  padding 0
  background black
  font-family 'Roboto', sans-serif
  color white

h1,h2,h3,h4,h5
  shadowText()


#container-countdown
  width 800px
  margin 20px auto 0 auto
  text-align center

#container
  margin 0 auto
  text-align center

#header
  position absolute
  width 100%
  // background rgba(0,0,200,0.5)
  
#buttons
  position absolute
  bottom 0
  width 100%
  // background rgba(0,0,200,0.5)
  

svg
  // border 1px solid black
  display none

#chart rect.QLD, #chart path.QLD
  fill rgba(200,0,50,0.8)

#chart rect.NSW, #chart path.NSW
  fill rgba(0,0,200,0.8)

.axis text
  font 10px sans-serif

.axis path, .axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.button
  background rgba(50,50,50,0.5)
  border 1px solid rgba(255,255,255,0.2)
  border-radius 5px
  cursor pointer
  display inline-block
  height 20px
  line-height 20px
  makeTransition(all 0.2s ease-in-out)
  margin 4px
  padding 4px
  shadow()
  &:hover
    border 1px solid rgba(255,255,255,0.8)
    background rgba(50,50,50,0.9)

circle
  &.NSW
    fill cyan
    & hover
      fill blue
  &.QLD
    fill pink
    & hover
      fill red
  stroke black
  stroke-width 1
  cursor pointer
  & hover
    stroke-width 4

.tooltip
  position absolute
  z-index 10
  visibility hidden
  padding 10px
  background white
  border-radius 2px
  border 2px solid #333



