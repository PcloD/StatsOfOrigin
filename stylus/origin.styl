colourGlow = rgba(102,43,222,1)

makeTransition(transition)
  -webkit-transition transition
  -moz-transition transition
  -o-transition transition
  transition transition
makeShadow(shadow)
  -moz-box-shadow shadow
  -webkit-box-shadow shadow
  box-shadow shadow
shadow()
  makeShadow(0 0 8px colourGlow)

shadowText()
  text-shadow 0px 0px 8px colourGlow


body
  background black
  color white
  font-family 'Roboto', sans-serif
  margin 0
  overflow hidden
  padding 0
  // background-image url('http://showbiz.com.au/uploads/media/default/0001/01/thumb_249_default_big.jpeg')

h1,h2,h3,h4,h5
  shadowText()


#container-countdown
  width 800px
  margin 20px auto 0 auto
  text-align center

#container
  margin 0 auto
  text-align center

#header
  position absolute
  width 100%

#buttons
  position absolute
  bottom 20px
  width 100%

svg
  // border 1px solid black
  display none

#chart rect.QLD, #chart path.QLD
  fill rgba(200,0,50,0.8)

#chart rect.NSW, #chart path.NSW
  fill rgba(0,0,200,0.8)

.axis text
  font 10px sans-serif

.axis path, .axis line
  fill none
  stroke #000
  shape-rendering crispEdges

.button
  background rgba(50,50,50,0.5)
  border 1px solid colourGlow
  border-radius 5px
  cursor pointer
  display inline-block
  height 20px
  line-height 20px
  makeTransition(all 0.2s ease-in-out)
  min-width 100px
  margin 4px
  padding 4px
  shadow()
  &:hover
    border 1px solid rgba(255,255,255,0.8)
    background rgba(50,50,50,0.9)
  &.selected
    background rgba(255,255,255,0.9)
    color black
    border 1px solid white

circle
  &.NSW
    fill cyan
    & hover
      fill blue
  &.QLD
    fill pink
    & hover
      fill red
  stroke black
  stroke-width 1
  cursor pointer
  & hover
    stroke-width 4

.tooltip
  position absolute
  z-index 10
  visibility hidden
  padding 10px
  background white
  border-radius 2px
  border 2px solid #333

@media screen and (max-width: 600px)
  h1,h2,h3,h4,h5
    font-size 1em

  #buttons
    bottom 0


