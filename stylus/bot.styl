body
  background #000
  color #aaa
  font-size 12px
  font-family sans-serif
a
  &:visited, &:link
    color #ccc
    text-decoration none
  &:hover
    color #fff

.tweet
  clear both
  margin 10px 0
  min-height 48px
  &.bad
    background #533
  &.good
    background #353
  .index
    float left
    font-size 20px
    line-height 48px
    text-align center
    width 48px
  .image
    float left
    width 48px
    margin-right 5px
  .text
    margin 5px
